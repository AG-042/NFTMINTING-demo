# Blockchain Configuration (Choose one option below)

# Option 1: Infura (Recommended - requires email signup only)
# SEPOLIA_URL=https://sepolia.infura.io/v3/YOUR_INFURA_PROJECT_ID
# MAINNET_URL=https://mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID

# Option 2: Public RPC Endpoints (No registration required)
SEPOLIA_URL=https://rpc.sepolia.org
GOERLI_URL=https://rpc.goerli.mudit.blog
MAINNET_URL=https://cloudflare-eth.com

# Option 3: Alchemy (requires phone verification)
# SEPOLIA_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY
# GOERLI_URL=https://eth-goerli.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY
# MAINNET_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY

# Layer 2 Networks (Optional)
POLYGON_URL=https://polygon-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY
POLYGON_MUMBAI_URL=https://polygon-mumbai.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY
OPTIMISM_URL=https://opt-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY
ARBITRUM_URL=https://arb-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY
BASE_URL=https://base-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY

# Private Key (DO NOT SHARE - Use a dedicated testnet wallet)
PRIVATE_KEY=your_wallet_private_key_here

# Etherscan API Key for contract verification
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# Gas Reporting
REPORT_GAS=true

# Frontend Configuration
NEXT_PUBLIC_CONTRACT_ADDRESS=your_deployed_contract_address
NEXT_PUBLIC_CHAIN_ID=11155111
NEXT_PUBLIC_NETWORK_NAME=sepolia
NEXT_PUBLIC_REOWN_PROJECT_ID=your_reown_project_id_here

# Filebase IPFS Configuration
NEXT_PUBLIC_FILEBASE_ACCESS_KEY=your_filebase_access_key_here
NEXT_PUBLIC_FILEBASE_SECRET_KEY=your_filebase_secret_key_here
NEXT_PUBLIC_FILEBASE_BUCKET=nft-minting-bucket

# Backend Configuration
DJANGO_SECRET_KEY=your_django_secret_key_here
DATABASE_URL=postgresql://user:password@localhost:5432/nftminting
FILEBASE_ACCESS_KEY=your_filebase_access_key_here
FILEBASE_SECRET_KEY=your_filebase_secret_key_here

# Environment
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,your-render-app.onrender.com

# Deployment
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token_here
RENDER_API_KEY=your_render_api_key_here
