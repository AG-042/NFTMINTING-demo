# Django Backend Environment Variables

# Django Configuration
DEBUG=True
DJANGO_SECRET_KEY=your-super-secret-django-key-here
ALLOWED_HOSTS=localhost,127.0.0.1,your-app-name.onrender.com

# Database Configuration (Choose one option)

# Option 1: Local PostgreSQL (Development)
DB_NAME=nft_minting_db
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_HOST=localhost
DB_PORT=5432

# Option 2: Production Database URL (Render/Railway/Supabase/Neon)
DATABASE_URL=postgresql://user:password@host:port/database

# Specific Examples:
# Render: postgresql://user:password@dpg-xxxxx-a.oregon-postgres.render.com/database_name
# Railway: postgresql://postgres:password@containers-us-west-xxx.railway.app:5432/railway
# Supabase: postgresql://postgres:password@db.xxxxx.supabase.co:5432/postgres
# Neon: postgresql://user:password@ep-xxx-xxx.us-east-2.aws.neon.tech/nftminting?sslmode=require

# Filebase IPFS Configuration (Backend Only - Keep Secure)
FILEBASE_ACCESS_KEY=your_filebase_access_key_here
FILEBASE_SECRET_KEY=your_filebase_secret_key_here
FILEBASE_BUCKET_NAME=nft-minting-bucket

# Email Configuration (Optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_HOST_USER=your_email@gmail.com
EMAIL_HOST_PASSWORD=your_app_password
EMAIL_PORT=587
EMAIL_USE_TLS=True

# Deployment Flags
RENDER=true